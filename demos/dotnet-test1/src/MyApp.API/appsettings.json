{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=WebShopDb;User Id=sa;Password=Your_Strong_Password123;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Application": {
    "Jwt": {
      "Secret": "YOUR-PRODUCTION-SECRET-KEY-HERE-MINIMUM-16-CHARACTERS",
      "Issuer": "WebShop.API",
      "Audience": "WebShop.Client",
      "ExpirationInMinutes": 60
    },
    "Validation": {
      "Password": {
        "MinimumLength": 8,
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireUppercase": true,
        "RequireNonAlphanumeric": true
      },
      "MaxBasketItems": 20,
      "MaxItemQuantity": 10
    },
    "Pagination": {
      "DefaultPageSize": 10,
      "MaxPageSize": 100
    }
  }
}
