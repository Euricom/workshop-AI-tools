{
    // Use of .github/copilot-instructions.md (default: true)
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,

    // Add additional files to the instructions
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "text": "Always add a comment: 'Generated by Copilot'."
        },
        {
            "file": ".github/fundamentals.md" 
        },
        {
            "file": ".github/code-style.md" 
        }
    ],
    
    // customize commit messages
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".github/commit-message.md"
        }
    ],
    
    // enable prompt files (experimental, default: false)
    "chat.promptFiles": true
}